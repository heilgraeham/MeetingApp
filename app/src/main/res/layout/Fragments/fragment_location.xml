<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.meetingapp.Fragments.LocationFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            android:hint="@string/lblAddress"
            android:inputType="textPostalAddress"/>
        <EditText
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:id="@+id/city"
            app:layout_constraintTop_toBottomOf="@+id/address"
            app:layout_constraintLeft_toRightOf="parent"
            android:hint="@string/lblCity"/>
        <Spinner
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/city"
            app:layout_constraintRight_toRightOf="parent"
            android:entries="@array/listOfStates"
            android:prompt="@string/statePrompt"
            android:id="@+id/states">
        </Spinner>
        <EditText
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:id="@+id/zipcode"
            app:layout_constraintTop_toBottomOf="@+id/states"
            app:layout_constraintLeft_toLeftOf="parent"
            android:hint="@string/lblZipCode"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
